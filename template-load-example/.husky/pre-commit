#!/usr/bin/env sh

# Check if we're working with template-load-example files
# Look for template-load-example in the staged files
if ! git diff --cached --name-only | grep -q "^template-load-example/"; then
  echo "Skipping template-load-example pre-commit hook (no template-load-example files staged)"
  exit 0
fi

# Change to template-load-example directory and run hooks
cd "$(git rev-parse --show-toplevel)/template-load-example" || exit 1

echo "Running template-load-example pre-commit hooks..."
pnpm lint-staged