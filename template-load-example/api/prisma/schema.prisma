// Prisma schema for template management demo
// Simple SQLite setup for development

generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "sqlite"
}

// Template model matching the TypeScript interface
model Template {
  id        String   @id @default(cuid()) // Unique identifier
  name      String   // Template name
  version   String   // Version string (e.g., "1.0.0")
  content   String   // Raw JSON string to preserve exact formatting
  archived  Boolean  @default(false) // Soft delete flag
  createdAt DateTime @default(now()) // ISO date string
  updatedAt DateTime @updatedAt // ISO date string

  @@map("templates") // Maps to 'templates' table in SQLite
}
